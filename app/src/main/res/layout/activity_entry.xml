<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context="com.example.gmol_android.EntryActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/result_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/result_image"
        android:id="@+id/layone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextID"
            android:hint="ID Pelanggan"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNama"
        android:hint="Nama Pelanggan"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<Button-->
                <!--android:id="@+id/button_lokasi"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right"-->
                <!--android:text="lokasi"-->
                <!--android:textColor="@color/login_background"-->
                <!--android:backgroundTint="@color/login_button"/>-->

        <EditText
            android:layout_width="148sp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLokasi"
            android:hint="Lokasi"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextGardu"
            android:hint="Gardu"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTegangan"
            android:hint="Tegangan"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBeban"
            android:hint="Beban"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/latitude"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Latitude: "
            android:textColor="@color/white"/>
        <TextView
            android:layout_below="@+id/latitude"
            android:text="longitude"
            android:id="@+id/longitude"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            />

        </LinearLayout>

    <EditText
        android:id="@+id/editTextPenyebabGangguan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Penyebab Gangguan"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text" />


        <Button
            android:id="@+id/button_lanjut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="lanjut"
            android:textColor="@color/login_background"
            android:backgroundTint="@color/login_button"/>


     <!--   <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:layout_below="@id/longitude"
            android:id="@+id/address"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:id="@+id/address_value"
            android:layout_centerHorizontal="true"/>-->

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/laytwo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA KWH METER GANGGUAN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/editTextMerkMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Merk Meter"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNoMeter"
            android:hint="No. Meter"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTipeMeter"
            android:hint="Tipe Meter"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNoSegel"
                android:hint="No. Segel"
                android:textColorHint="@color/white"
                android:inputType="text"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextInisial"
                android:hint="Inisial"
                android:textColorHint="@color/white"
                android:inputType="text"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextStandMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stand Meter"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Petugas"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPerbaikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Perbaikan Sementara"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/button_simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="simpan"
            android:textColor="@color/login_background"
            android:backgroundTint="@color/login_button"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
