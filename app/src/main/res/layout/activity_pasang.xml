        <TextView
            android:id="@+id/viewLokasi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Lokasi" />

        <TextView
            android:id="@+id/viewTarif"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Tarif" />

        <TextView
            android:id="@+id/viewGardu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Gardu" />

