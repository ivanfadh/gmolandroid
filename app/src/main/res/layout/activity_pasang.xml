        <Button
            android:id="@+id/button_cari1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="cari"
            android:textColor="@color/login_background"
            android:backgroundTint="@color/login_button"/>

        <Button
            android:id="@+id/button_lanjut1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Lanjut"
            android:visibility="gone"
            android:textColor="@color/login_background"
            android:backgroundTint="@color/login_button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layPasTwo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA KWH METER BARU"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/editTextMerkMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Merk Meter"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNoMeter"
            android:hint="No. Meter"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTipeMeter"
            android:hint="Tipe Meter"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="225sp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNoSegel"
                android:hint="No. Segel"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="text"/>

            <EditText
