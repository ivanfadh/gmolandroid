                android:hint="Inisial"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="text"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextStandMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stand Meter"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Petugas"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPerbaikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Perbaikan Sementara"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/button_simpan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="simpan"
            android:textColor="@color/login_background"
            android:backgroundTint="@color/login_button"/>

    </LinearLayout>

