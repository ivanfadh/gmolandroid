<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical"
    tools:context="com.example.gmol_android.MenuActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePasang"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/pasang"
        app:layout_constraintTop_toBottomOf="@+id/button_entry"
        tools:layout_editor_absoluteX="132dp" />

    <Button
        android:id="@+id/button_pasang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/login_button"
        android:text="buka"
        android:textColor="@color/login_background"
        app:layout_constraintTop_toBottomOf="@+id/imagePasang"
        tools:layout_editor_absoluteX="148dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageEntry"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_marginEnd="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/entrydata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_entry"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/login_button"
        android:text="buka"
        android:textColor="@color/login_background"
        app:layout_constraintTop_toBottomOf="@+id/imageEntry"
        tools:layout_editor_absoluteX="148dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/login_background"
        app:srcCompat="@drawable/log" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginStart="10dp"
        android:text="KELUAR"
        android:textColor="@color/white" />


</RelativeLayout>
